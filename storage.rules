
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    function isAdmin() {
      // Assumes user's role is stored in Firestore. This requires a Firestore read.
      // Ensure your rules allow this read: match /users/{userId} { allow get: if request.auth != null; }
      return request.auth != null && get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }

    match /{allPaths=**} {
      // Grant full access to admins.
      // Other authenticated users can also read and write.
      allow read, write: if isAdmin() || request.auth != null;
    }
  }
}
