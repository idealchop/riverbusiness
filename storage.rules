
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'admin@riverph.com';
    }

    // Users can only read/write to their own folder.
    match /users/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if (request.auth != null && request.auth.uid == userId);
    }
    
    // Admins can manage user-specific top-level folders and station folders.
    // Any authenticated user can read from these folders (e.g. to see another user's profile pic)
    match /userContracts/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    match /stations/{stationId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
  }
}
