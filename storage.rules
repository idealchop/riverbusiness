
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'admin@riverph.com';
    }

    // Users can only read/write to their own folder, but Admins can also write.
    match /users/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if (request.auth != null && request.auth.uid == userId) || isAdmin();
    }

    // Admins can manage user contracts. Any auth'd user can read.
    match /userContracts/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    // Admins can manage station documents. Any auth'd user can read.
    match /stations/{stationId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    // Allow read access to marketing and logo images for all users, including unauthenticated ones for the login page.
    match /River Mobile/{allPaths=**} {
      allow read;
    }
    match /Sales Portal/{allPaths=**} {
      allow read;
    }
  }
}
