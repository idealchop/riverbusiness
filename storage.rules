
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    function isAdmin() {
      // Assumes user's role is stored in Firestore.
      return request.auth != null && get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }

    match /users/{userId}/profile/{fileName} {
      allow read, write: if request.auth.uid == userId;
    }

    match /users/{userId}/contracts/{fileName} {
      allow read: if request.auth.uid == userId;
      allow write: if isAdmin();
    }
    
    match /users/{userId}/deliveries/{deliveryId}/{fileName} {
       allow write: if isAdmin();
    }
    
    match /stations/{stationId}/compliance/{fileName} {
      allow write: if isAdmin();
    }

    match /stations/{stationId}/sanitation/{visitId}/{fileName} {
      allow write: if isAdmin();
    }

    // Admins can read all files. This is a broad rule.
    match /{allPaths=**} {
      allow read: if isAdmin();
    }
  }
}
