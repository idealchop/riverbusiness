
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'admin@riverph.com';
    }

    // Users can only read/write to their own folder.
    match /users/{userId}/{allPaths=**} {
      // Any authenticated user can read (e.g. for profile pics)
      allow read: if request.auth != null;
      // Only the owner can write to their own folder
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Admins can manage user contracts. Any auth'd user can read.
    match /userContracts/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    // Admins can manage station documents. Any auth'd user can read.
    match /stations/{stationId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
  }
}
