rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // WARNING: This is a temporary, permissive rule for debugging.
    // It allows any authenticated user to read and write to any file.
    // This should be replaced with more secure rules once the issue is resolved.
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
