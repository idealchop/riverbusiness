
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'admin@riverph.com';
    }

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function isAllowed(maxSizeMB) {
        return request.resource.size < maxSizeMB * 1024 * 1024
               && (request.resource.contentType.matches('image/.*') || 
                   request.resource.contentType.matches('application/pdf'));
    }

    // Corrected rule: allow read for anyone, allow write for the owner.
    match /users/{userId}/profile/{fileName} {
      allow read;
      allow write: if isOwner(userId) && isAllowed(5);
    }

    match /userContracts/{userId}/{fileName} {
      allow get: if isOwner(userId) || isAdmin();
      allow write: if isAdmin() && isAllowed(10);
    }
    
    match /users/{userId}/deliveries/{deliveryId}/{fileName} {
       allow get: if isOwner(userId) || isAdmin();
       allow write: if isAdmin() && isAllowed(5);
    }
    
    match /users/{userId}/payments/{paymentId}/{fileName} {
       allow get: if isOwner(userId) || isAdmin();
       allow write: if isOwner(userId) && isAllowed(5);
    }

    match /stations/{stationId}/{documentType}/{fileName} {
      allow get: if request.auth != null;
      allow write: if isAdmin() && isAllowed(10);
    }
  }
}
