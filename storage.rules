
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'admin@riverph.com';
    }

    // Users can only write to their own folder.
    // Any authenticated user can read files (e.g., for viewing profile pictures).
    match /users/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if (request.auth != null && request.auth.uid == userId) || isAdmin();
    }

    // Admins can manage all station documents.
    // Any authenticated user can read station documents (e.g., compliance reports).
    match /stations/{stationId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    // Only admins can upload contracts. The specific user can also read their own contract.
    match /userContracts/{userId}/{allPaths=**} {
      allow read: if (request.auth != null && request.auth.uid == userId) || isAdmin();
      allow write: if isAdmin();
    }
  }
}
