
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function isAdmin() {
      // Allow full access for the designated admin email.
      return request.auth != null && request.auth.token.email == 'admin@riverph.com';
    }

    // Admins have global access to all documents for management purposes.
    match /{document=**} {
      allow read, write: if isAdmin();
    }

    match /users/{userId} {
      // A user can read, update, or delete their own profile.
      allow read, update, delete: if isOwner(userId);
      // Any authenticated user can create their own user document (happens during profile claim).
      allow create: if request.auth != null;
    }
    
    // Specific rule for chat messages to allow admin access.
    match /users/{userId}/chatMessages/{messageId} {
        allow read, write: if isOwner(userId) || isAdmin();
    }
    
    // Users can manage all other subcollections within their own user document.
    match /users/{userId}/{subcollection}/{docId} {
      allow read, list, write, delete: if subcollection != 'chatMessages' && isOwner(userId);
    }
    
    match /unclaimedProfiles/{clientId} {
      // Admins can create and manage unclaimed profiles (covered by global admin rule).
      
      // A newly signed-up user can read and delete their own unclaimed profile to claim it.
      // We verify they are a new user by checking that a document for them does NOT yet exist in the main /users collection.
      allow read, delete: if request.auth != null && !exists(/databases/$(database)/documents/users/$(request.auth.uid));
    }

    match /waterStations/{stationId} {
      allow read: if request.auth != null;
    }
    
    match /waterStations/{stationId}/{document=**} {
        allow read, list: if request.auth != null;
    }

    match /schedules/currentSchedule {
      allow read: if request.auth != null;
    }

    // Collection Group Queries for Admin Panel
     match /{path=**}/payments/{paymentId} {
      allow list: if isAdmin();
    }

    match /{path=**}/refillRequests/{requestId} {
      allow list: if isAdmin();
    }
  }
}
