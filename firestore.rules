
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function isAdmin() {
      // Assumes user's role is stored in Firestore.
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }

    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      // Admins can update any field. Users can only update their own accountStatus and lastLogin.
      allow write: if isAdmin() || 
                   (isOwner(userId) && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['accountStatus', 'lastLogin']));
    }
    
    match /users/{userId}/deliveries/{deliveryId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isAdmin(); // Only admins can create/update/delete delivery records.
    }

    match /users/{userId}/payments/{paymentId} {
      allow read, write: if isOwner(userId) || isAdmin();
    }
    
    match /users/{userId}/consumptionHistory/{historyId} {
      allow read, write: if isOwner(userId);
      // Admins can also read consumption history across all users for analytics.
      allow read: if isAdmin();
    }

    match /waterStations/{stationId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    match /waterStations/{stationId}/{document=**} {
        allow read: if request.auth != null;
        allow write: if isAdmin();
    }

    match /schedules/currentSchedule {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
  }
}
