
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'admin@riverph.com';
    }

    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow create: if request.auth != null;
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isOwner(userId);
    }
    
    match /users/{userId}/deliveries/{deliveryId} {
      allow read, list: if isOwner(userId) || isAdmin();
      allow create, update, delete: if isAdmin();
    }

    match /users/{userId}/payments/{paymentId} {
      allow read, list: if isOwner(userId) || isAdmin();
      // Allow admins to update payment status
      allow update: if isAdmin();
      // Only backend functions can create invoices, users can't create them.
      allow create: if false; 
    }
    
    match /users/{userId}/consumptionHistory/{historyId} {
      allow read, list: if isOwner(userId) || isAdmin();
      allow create, update: if isAdmin();
    }

    match /users/{userId}/notifications/{notificationId} {
      allow read, list: if isOwner(userId);
      allow update: if isOwner(userId); // Allow user to mark as read
      // Creation should be handled by backend/functions.
      allow create, delete: if isAdmin(); 
    }

    match /users/{userId}/sanitationVisits/{visitId} {
      allow read, list: if isOwner(userId) || isAdmin();
      allow create, update, delete: if isAdmin();
    }

    match /waterStations/{stationId} {
      allow read: if request.auth != null;
      allow create, update, delete: if isAdmin();
    }
    
    match /waterStations/{stationId}/{document=**} {
        allow read, list: if request.auth != null;
        allow create, update, delete: if isAdmin();
    }

    match /schedules/currentSchedule {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    match /refillRequests/{requestId} {
      // Any authenticated user can create a request for themselves.
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // A user can read their own specific request document. Admins can read any.
      allow get: if (request.auth != null && resource.data.userId == request.auth.uid) || isAdmin();

      // Admins can manage all requests.
      allow update: if isAdmin();
      
      // Allow a user to LIST requests only when the query is filtered by their own userId and a valid status.
      allow list: if (request.auth != null && request.query.userId == request.auth.uid && request.query.status in ['Requested', 'In Production', 'Out for Delivery']) || isAdmin();
    }
  }
}
