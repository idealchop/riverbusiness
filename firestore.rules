
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function isAdmin() {
      // Assumes user's role is stored in Firestore.
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }

    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      // Allow a user to create/update their own document, and allow admins to do the same.
      allow write: if isOwner(userId) || isAdmin();
    }
    
    match /users/{userId}/deliveries/{deliveryId} {
      allow read, list: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId) || isAdmin(); 
      allow update, delete: if isAdmin();
    }

    match /users/{userId}/payments/{paymentId} {
      allow read, write: if isOwner(userId) || isAdmin();
    }
    
    match /users/{userId}/consumptionHistory/{historyId} {
      allow read, list: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId) || isAdmin();
    }

    match /waterStations/{stationId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    match /waterStations/{stationId}/{document=**} {
        allow read, list: if request.auth != null;
        allow write: if isAdmin();
    }

    match /schedules/currentSchedule {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
  }
}
