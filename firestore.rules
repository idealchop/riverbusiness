
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for Admin role
    function isAdmin() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }

    // Users can read/update their own profile. Admins can read/list all profiles.
    match /users/{userId} {
      allow read: if request.auth.uid == userId || isAdmin();
      allow list: if isAdmin();
      // Allow user to create their own document during onboarding
      allow create: if request.auth.uid == userId;
      // Allow user to update their own data, but only admins can change roles.
      // Users can update their own lastLogin and accountStatus for presence.
      allow update: if request.auth.uid == userId && (!('role' in request.resource.data) || request.resource.data.role == resource.data.role);
    }

    // Water stations are readable by any user, but only writable by admins.
    match /waterStations/{stationId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    // Subcollections can only be accessed by the parent document owner or an admin.
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth.uid == userId || isAdmin();
    }

    match /waterStations/{stationId}/{document=**} {
        allow read: if request.auth != null;
        allow write: if isAdmin();
    }
  }
}
