
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function isAdmin() {
      // User is an admin if their custom claim 'admin' is true, or their email is the designated admin email.
      return request.auth != null && request.auth.token.email == 'admin@riverph.com';
    }

    // Admins have global read/write access to all documents for management purposes.
    match /{document=**} {
      allow read, write: if isAdmin();
    }

    match /users/{userId} {
      // Allow any authenticated user to read a specific user's document.
      // This is needed for the user to fetch the Admin's profile for the chat.
      allow get: if request.auth != null;
      allow list, read: if isOwner(userId);
      
      // A user can update specific fields on their own profile.
      allow update: if isOwner(userId) && request.resource.data.diff(resource.data).affectedKeys()
        .hasAny([
            'name', 'businessEmail', 'address', 'contactNumber', 'photoURL',
            'customPlanDetails', 'pendingPlan', 'planChangeEffectiveDate',
            'lastChatMessage', 'lastChatTimestamp', 'hasUnreadUserMessages', 'hasUnreadAdminMessages',
            'accountStatus', 'lastLogin'
        ]);

      // A user can delete their own profile (though this is not a current app feature).
      allow delete: if isOwner(userId);
      
      // Any authenticated user can create their own user document (happens during profile claim).
      allow create: if request.auth != null;
    }
    
    // Users and Admins can manage messages within a user's chat subcollection.
    match /users/{userId}/chatMessages/{messageId} {
        allow read, write: if isOwner(userId) || isAdmin();
    }
    
    // Users can manage all other subcollections within their own user document.
    match /users/{userId}/{subcollection}/{docId} {
      allow read, list, write, delete: if isOwner(userId);
    }
    
    match /unclaimedProfiles/{clientId} {
      // A newly signed-up user can read and delete their own unclaimed profile to claim it.
      allow read, delete: if request.auth != null && !exists(/databases/$(database)/documents/users/$(request.auth.uid));
    }

    // Any authenticated user can read station and schedule information.
    match /waterStations/{stationId} {
      allow read: if request.auth != null;
    }
    match /waterStations/{stationId}/{document=**} {
        allow read, list: if request.auth != null;
    }
    match /schedules/currentSchedule {
      allow read: if request.auth != null;
    }

    // Admins can perform collection group queries needed for the admin panel.
     match /{path=**}/payments/{paymentId} {
      allow list: if isAdmin();
    }
    match /{path=**}/refillRequests/{requestId} {
      allow list: if isAdmin();
    }

    // Rules for public sanitation reports
    match /publicSanitationLinks/{linkId} {
      // Anyone can read the link mapping to get the path to the real document.
      allow read;
      // Only admins can create these links.
      allow write: if isAdmin();
    }

    // Anyone can update a sanitation visit document IF they come from a valid public link.
    // This is implicitly handled by the app logic fetching the path from the link.
    // The rule on the user's subcollection needs to be adjusted.
    match /users/{userId}/sanitationVisits/{visitId} {
      allow read, list, write, delete: if isOwner(userId) || isAdmin();
      // Allow public update for specific fields
      allow update: if request.auth == null && request.resource.data.diff(resource.data).affectedKeys()
        .hasAny(['checklist', 'officerSignature', 'clientSignature', 'status']);
    }
  }
}
