
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // UPDATED: Check for role on the auth token's custom claims.
    function isAdmin() {
      return request.auth != null && request.auth.token.role == 'Admin';
    }

    match /users/{userId} {
      allow read, delete: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isAdmin();
    }
    
    match /users/{userId}/deliveries/{deliveryId} {
      allow read, list: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId) || isAdmin(); 
      allow update, delete: if isAdmin();
    }

    match /users/{userId}/payments/{paymentId} {
      allow read, write: if isOwner(userId) || isAdmin();
    }
    
    match /users/{userId}/consumptionHistory/{historyId} {
      allow read, list: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId) || isAdmin();
    }

    match /waterStations/{stationId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    match /waterStations/{stationId}/{document=**} {
        allow read, list: if request.auth != null;
        allow write: if isAdmin();
    }

    match /schedules/currentSchedule {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    match /refillRequests/{requestId} {
      allow create: if request.auth != null;
      allow read, list, update: if isAdmin();
    }
  }
}
