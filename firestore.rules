
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function isAdmin() {
      // Use `exists()` to safely check for the document's existence before accessing its data.
      return request.auth != null && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }

    match /users/{userId} {
      // Read and Delete: Allowed if the user is the owner OR is an admin.
      allow read, delete: if isOwner(userId) || isAdmin();
      
      // Create: Allow any authenticated user to create THEIR OWN document.
      // This is crucial for new user onboarding.
      allow create: if isOwner(userId);
      
      // Update: Allow if the user is the owner OR is an admin.
      // This covers subsequent logins and admin modifications.
      allow update: if isOwner(userId) || isAdmin();
    }
    
    match /users/{userId}/deliveries/{deliveryId} {
      allow read, list: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId) || isAdmin(); 
      allow update, delete: if isAdmin();
    }

    match /users/{userId}/payments/{paymentId} {
      allow read, write: if isOwner(userId) || isAdmin();
    }
    
    match /users/{userId}/consumptionHistory/{historyId} {
      allow read, list: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId) || isAdmin();
    }

    match /waterStations/{stationId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    match /waterStations/{stationId}/{document=**} {
        allow read, list: if request.auth != null;
        allow write: if isAdmin();
    }

    match /schedules/currentSchedule {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
  }
}
