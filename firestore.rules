
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'admin@riverph.com';
    }

    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow create: if request.auth != null;
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isOwner(userId);
    }
    
    match /users/{userId}/deliveries/{deliveryId} {
      allow read, list: if isOwner(userId) || isAdmin();
      allow create, update, delete: if isAdmin();
    }

    match /users/{userId}/payments/{paymentId} {
      allow read, list: if isOwner(userId) || isAdmin();
      // Allow admins to update payment status
      allow update: if isAdmin();
      // Only backend functions can create invoices, users can't create them.
      allow create: if false; 
    }
    
    match /users/{userId}/consumptionHistory/{historyId} {
      allow read, list: if isOwner(userId) || isAdmin();
      allow create, update: if isAdmin();
    }

    match /users/{userId}/notifications/{notificationId} {
      allow read, list: if isOwner(userId);
      allow update: if isOwner(userId); // Allow user to mark as read
      // Creation should be handled by backend/functions.
      allow create, delete: if isAdmin(); 
    }

    match /users/{userId}/sanitationVisits/{visitId} {
      allow read, list: if isOwner(userId) || isAdmin();
      allow create, update, delete: if isAdmin();
    }

    match /waterStations/{stationId} {
      allow read: if request.auth != null;
      allow create, update, delete: if isAdmin();
    }
    
    match /waterStations/{stationId}/{document=**} {
        allow read, list: if request.auth != null;
        allow create, update, delete: if isAdmin();
    }

    match /schedules/currentSchedule {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    match /refillRequests/{requestId} {
      // Any authenticated user can create a request.
      allow create: if request.auth != null;
      // Admins can read/list all requests.
      allow read, update, list: if isAdmin();
      // A user can read/list their own requests.
      allow list: if request.auth != null && request.query.get("userId") == request.auth.uid;
      allow read: if request.auth != null && get(/databases/$(database)/documents/refillRequests/$(requestId)).data.userId == request.auth.uid;
    }
  }
}
