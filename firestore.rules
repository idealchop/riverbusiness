
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function isAdmin() {
      // User is an admin if their custom claim 'admin' is true, or their email is the designated admin email.
      return request.auth != null && request.auth.token.email == 'admin@riverph.com';
    }

    // Admins have global read/write access to all documents for management purposes.
    match /{document=**} {
      allow read, write: if isAdmin();
    }
    
    // --- BATCH WRITE VALIDATION for Branch Deliveries by Admin ---
    function isValidBranchDeliveryBatch(userId) {
      // Expecting a 3-part batch: delivery create, parent update, transaction create
      if (request.writeBatch.size() != 3) {
        return false;
      }
      
      let deliveryCreate = request.writeBatch[0];
      let parentUpdate = request.writeBatch[1];
      let transactionCreate = request.writeBatch[2];
      
      // Ensure the operations are of the correct type
      if (!(deliveryCreate.method == 'create' && parentUpdate.method == 'update' && transactionCreate.method == 'create')) {
        return false;
      }

      let deliveryData = deliveryCreate.data;
      let parentPath = /databases/$(database)/documents/users/$(deliveryData.parentId);
      
      // 1. Delivery document is being created for the correct user and has the parentId
      let isDeliveryForUser = deliveryCreate.path == /databases/$(database)/documents/users/$(userId)/deliveries/$(deliveryData.id)
                              && deliveryData.parentId != null;
      // 2. Parent update is for the correct parent
      let isParentUpdateCorrect = parentUpdate.path == parentPath;
      // 3. Transaction create is for the correct parent subcollection
      let transactionPath = parentPath + /transactions/$(transactionCreate.id);
      let isTransactionCreateCorrect = transactionCreate.path.join('/') == transactionPath.join('/');

      // 4. Validate the parent balance deduction
      let cost = deliveryData.volumeContainers * 19.5 * get(/databases/$(database)/documents/users/$(userId)).data.plan.price;
      let isBalanceDeductedCorrectly = parentUpdate.data.topUpBalanceCredits == get(parentPath).data.topUpBalanceCredits - cost;

      return isDeliveryForUser && isParentUpdateCorrect && isTransactionCreateCorrect && isBalanceDeductedCorrectly;
    }

    match /users/{userId} {
      // Allow any user (authenticated or not) to read a specific user's document.
      allow get: if true;
      
      // A user can update specific fields on their own profile.
      allow update: if isOwner(userId) && request.resource.data.diff(resource.data).affectedKeys()
        .hasAny([
            'name', 'businessName', 'businessEmail', 'address', 'contactNumber', 'photoURL',
            'customPlanDetails', 'pendingPlan', 'planChangeEffectiveDate',
            'lastChatMessage', 'lastChatTimestamp', 'hasUnreadUserMessages', 'hasUnreadAdminMessages',
            'accountStatus', 'lastLogin'
        ]);

      // A user can delete their own profile (though this is not a current app feature).
      allow delete: if isOwner(userId);
      
      // A user document can ONLY be created if it's part of a valid profile claim transaction.
      allow create: if request.auth != null && 
                      // The unclaimed profile must exist before the transaction
                      get(/databases/$(database)/documents/unclaimedProfiles/$(request.resource.data.clientId)) != null &&
                      // The user document must NOT exist before the transaction
                      !exists(/databases/$(database)/documents/users/$(request.auth.uid));

      // 1. A user can read their own document.
      // 2. A parent user can read the documents of their branch users.
      allow list, read: if isOwner(userId) || 
                       (request.auth != null && resource.data.parentId == request.auth.uid) ||
                       (request.auth != null && request.query.where.get('parentId')[2] == request.auth.uid);
    }
    
    // Parent users can read their own transaction history.
    match /users/{userId}/transactions/{transactionId} {
      allow read, list: if isOwner(userId);
      // Admin creates are handled via the validated batch write
      allow create: if isAdmin() && isValidBranchDeliveryBatch(userId);
    }
    
    // Users and Admins can manage messages within a user's chat subcollection.
    match /users/{userId}/chatMessages/{messageId} {
        allow read, write: if isOwner(userId) || isAdmin();
    }
    
    match /unclaimedProfiles/{clientId} {
      // Allow a newly authenticated user to delete an unclaimed profile as part of the claim process.
      allow read, delete: if request.auth != null;
    }

    // Any authenticated user can read station and schedule information.
    match /waterStations/{stationId} {
      allow read: if request.auth != null;
    }
    match /waterStations/{stationId}/{document=**} {
        allow read, list: if request.auth != null;
    }
    match /schedules/currentSchedule {
      allow read: if request.auth != null;
    }

    // Admins can perform collection group queries needed for the admin panel.
     match /{path=**}/payments/{paymentId} {
      allow list: if isAdmin();
    }
    match /{path=**}/refillRequests/{requestId} {
      allow list: if isAdmin();
    }

    // A parent user can query the deliveries of their child accounts.
    match /{path=**}/deliveries/{deliveryId} {
      allow list: if isAdmin() || (request.auth != null && request.query.where[0][0] == "parentId" && request.query.where[0][2] == request.auth.uid);
    }

    // Rules for public sanitation reports
    match /publicSanitationLinks/{linkId} {
      // Anyone can read the link mapping to get the path to the real document.
      allow read: if true;
      // Only admins can create these links.
      allow write: if isAdmin();
    }

    // Anyone can update a sanitation visit document IF they come from a valid public link.
    // The rule on the user's subcollection needs to be adjusted.
    match /users/{userId}/sanitationVisits/{visitId} {
      // Admins and owners have full access.
      allow write, delete: if isOwner(userId) || isAdmin();
      // Allow public read for the specific report page.
      allow read: if true;
      // Allow public update for specific fields related to the report submission.
      allow update: if request.auth == null && request.resource.data.diff(resource.data).affectedKeys()
        .hasAny(['dispenserReports', 'status', 'officerSignature', 'clientSignature', 'clientRepName', 'officerSignatureDate', 'clientSignatureDate']);
    }

    // All other user subcollections are private to the owner.
     match /users/{userId}/{subcollection}/{docId} {
       // This rule specifically handles the creation of a delivery by an admin for a branch user.
       allow create: if (subcollection == 'deliveries' && isAdmin() && isValidBranchDeliveryBatch(userId))
                      || isOwner(userId); // Or if the owner is creating a doc in their own subcollection
      allow read, list, update, delete: if isOwner(userId);
    }
  }
}
