
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'admin@riverph.com';
    }

    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow create: if request.auth != null;
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isOwner(userId);
    }
    
    match /users/{userId}/{document=**} {
      allow read, list, write, delete: if isOwner(userId) || isAdmin();
    }
    
    match /unclaimedProfiles/{clientId} {
      // Admins can create/manage these profiles.
      allow write, create, list: if isAdmin();
      
      // A newly signed-up user can read and delete their own profile to claim it.
      // We verify they are new by checking that a user document for them does NOT exist yet.
      allow read, delete: if request.auth != null && !exists(/databases/$(database)/documents/users/$(request.auth.uid));
    }

    match /waterStations/{stationId} {
      allow read: if request.auth != null;
      allow create, update, delete: if isAdmin();
    }
    
    match /waterStations/{stationId}/{document=**} {
        allow read, list: if request.auth != null;
        allow create, update, delete: if isAdmin();
    }

    match /schedules/currentSchedule {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    // Collection Group Queries
     match /{path=**}/payments/{paymentId} {
      allow read, list: if isAdmin();
    }

    match /{path=**}/refillRequests/{requestId} {
      allow read, list: if isAdmin();
    }
  }
}
